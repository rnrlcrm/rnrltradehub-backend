# Database Configuration
# Update these values for your PostgreSQL database
DATABASE_URL=postgresql://user:password@localhost:5432/rnrltradehub

# Server Configuration
PORT=8080

# JWT Authentication Configuration (REQUIRED for production)
# Generate a secure random secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration - Gmail SMTP (Phase 4)
# For Gmail: Use App Password (https://support.google.com/accounts/answer/185833)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=noreply@rnrltradehub.com
SMTP_FROM_NAME=RNRL TradeHub

# Scheduler Configuration (Phase 3)
# Generate a secure random secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
CRON_SECRET=your-cron-secret-change-in-production

# Security Configuration (Phase 5)
# SESSION_TIMEOUT=1800000
# MAX_LOGIN_ATTEMPTS=5
# ACCOUNT_LOCK_DURATION=3600000

# Redis Configuration (Phase 5 - Rate Limiting)
# REDIS_URL=redis://localhost:6379

